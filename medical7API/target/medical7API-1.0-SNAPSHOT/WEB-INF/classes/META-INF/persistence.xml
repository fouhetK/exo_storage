<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>entities.MedecinEntity</class>
    <class>entities.PatientEntity</class>
    <class>entities.PaysEntity</class>
    <class>entities.UserEntity</class>
    <class>entities.VilleEntity</class>

    <properties>
      <property name="javax.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/medical_jpa" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="" />
      <property name="javax.persistence.jdbc.driver"
                value="com.mysql.cj.jdbc.Driver" />
    </properties>
  </persistence-unit>
</persistence>
